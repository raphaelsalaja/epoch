{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "target": "ES2018",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2015", "dom"],
    "types": ["react", "react-dom"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
